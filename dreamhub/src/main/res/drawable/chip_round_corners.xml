<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/selected_chip_background_color" />
            <padding android:left="@dimen/chip_text_left_right_padding" android:right="@dimen/chip_text_left_right_padding" />
            <corners android:radius="@dimen/round_corners_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/unselected_chip_background_color" />
            <padding android:left="@dimen/chip_text_left_right_padding" android:right="@dimen/chip_text_left_right_padding" />
            <corners android:radius="@dimen/round_corners_radius" />
        </shape>
    </item>
</selector>