<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/onboarding_screen_explanation_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <Space
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="@dimen/onboarding_welcome_screen_text_horizontal_margin_weight" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="@dimen/onboarding_welcome_screen_text_width_weight"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/onboarding_screen_icons"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/onboarding_screen_icon_height"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/onboarding_screen_text"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/onboarding_screen_textview_height"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/onboarding_screen_text_top_margin"
            android:gravity="center"
            android:lineSpacingMultiplier="@dimen/text_line_spacing"
            android:textColor="@color/white_text"
            android:textSize="@dimen/onboarding_screen_text_size" />
    </LinearLayout>

    <Space
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="@dimen/onboarding_welcome_screen_text_horizontal_margin_weight" />
</LinearLayout>