<?xml version="1.0" encoding="utf-8"?>
<com.winter.dreamhub.timely.agenda.AgendaEventView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/event_container"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/generic_item_row_height"
        android:gravity="top">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/generic_item_row_height"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="@dimen/generic_item_icon_column_width"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="54.0dip"
                    android:layout_height="54.0dip"
                    android:layout_gravity="center"
                    android:src="@drawable/quantum_ic_reminder_white_24" />
            </FrameLayout>

            <LinearLayout
                style="@style/GenericItem_Icon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:textColor="@color/generic_item_font_black"
                    android:textSize="@dimen/generic_item_title_text_size" />

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/generic_item_text_lines_margin_top"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:textColor="@color/generic_item_font_light"
                    android:textSize="@dimen/generic_item_subtitle_text_size" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</com.winter.dreamhub.timely.agenda.AgendaEventView>