<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prices_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/action_divider"
        android:gravity="top" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="65.0dip"
            android:background="@color/quantum_white_text"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingRight="@dimen/spacing_normal">

            <LinearLayout
                android:id="@+id/detail_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/title_prices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/text_prices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2.0dip"
                    android:layout_marginTop="4.0dip"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/quantum_black_text"
                    android:textSize="18.0sp" />

            </LinearLayout>

            <android.support.design.button.MaterialButton
                android:id="@+id/view_deal"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/default_margin"
                android:background="@color/accent_blue"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:textColor="@color/quantum_white_text"
                android:textSize="15.0sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </RelativeLayout>

    </FrameLayout>
</LinearLayout>