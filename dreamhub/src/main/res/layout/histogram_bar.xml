<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/review_summary_linear_layout_padding">

    <TextView
        android:id="@+id/star_number"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingRight="@dimen/review_summary_linear_layout_padding" />

    <ImageView
        android:id="@+id/star_image"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingRight="@dimen/review_summary_linear_layout_padding_large"
        android:src="@drawable/ic_qu_star_gray_14" />
</LinearLayout>