<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bundle_configurator_container"
    android:layout_width="fill_parent"
    android:layout_height="0.0dip"
    android:layout_weight="1.0">

    <ScrollView
        android:id="@+id/bundle_configurator_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bundle_configurator_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/onboarding_bundle_configurator_start_margin"
                android:layout_marginRight="@dimen/onboarding_bundle_configurator_end_margin"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingTop="@dimen/onboarding_bundle_configurator_title_top_padding"
                android:text="@string/onboarding_bundle_configurator_title_text"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/onboarding_bundle_configurator_title_text_size" />

            <TextView
                android:id="@+id/bundle_configurator_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/onboarding_bundle_configurator_start_margin"
                android:layout_marginRight="@dimen/onboarding_bundle_configurator_end_margin"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingBottom="@dimen/onboarding_bundle_configurator_summary_bottom_padding"
                android:paddingTop="@dimen/onboarding_bundle_configurator_summary_top_padding"
                android:text="@string/onboarding_bundle_configurator_summary_text"
                android:textColor="@color/light_text"
                android:textSize="@dimen/onboarding_bundle_configurator_summary_text_size" />

            <ProgressBar
                android:id="@+id/empty_list_view_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/bundle_configurator_cluster_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/bundle_configurator_cluster_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/onboarding_bundle_configurator_start_margin"
                    android:layout_marginRight="@dimen/onboarding_bundle_configurator_end_margin"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/onboarding_bundle_configurator_cluster_list_bottom_padding"
                    android:paddingTop="@dimen/onboarding_bundle_configurator_cluster_list_top_padding">


                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/empty_list_view_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/onboarding_bundle_configurator_start_margin"
        android:layout_marginRight="@dimen/onboarding_bundle_configurator_end_margin"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="@dimen/text_line_spacing"
        android:text="@string/onboarding_bundle_configurator_all_bundles_skip_inbox_error_message"
        android:textColor="@color/dark_text"
        android:textSize="@dimen/onboarding_bundle_configurator_summary_text_size"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/bundle_configurator_status_bar_drop_shadow"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_list_drop_shadow_height"
        android:layout_gravity="top"
        android:background="@drawable/bundle_configurator_status_bar_drop_shadow"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/bundle_configurator_navigation_bar_drop_shadow"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_list_drop_shadow_height"
        android:layout_gravity="bottom"
        android:background="@drawable/bundle_configurator_navigation_bar_drop_shadow"
        android:visibility="gone" />
</FrameLayout>