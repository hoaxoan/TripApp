<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/onboarding_screen_device_render_container"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="@dimen/onboarding_welcome_screen_example_container_weight">

        <include
            layout="@layout/onboarding_screen_device_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/onboarding_screen_device_frame_horizontal_margin"
            android:layout_marginRight="@dimen/onboarding_screen_device_frame_horizontal_margin"
            android:layout_marginTop="@dimen/onboarding_screen_device_frame_top_margin" />
    </FrameLayout>

    <include
        layout="@layout/onboarding_screen_explanation_layout"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="@dimen/onboarding_welcome_screen_explanation_container_weight" />
</LinearLayout>