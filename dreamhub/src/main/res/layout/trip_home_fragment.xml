<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ProgressBar
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:orientation="vertical">

            <include
                android:id="@+id/trip_home_header"
                layout="@layout/trip_home_header" />

            <include
                android:id="@+id/download_guide_bar"
                layout="@layout/trip_download_bar"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:nestedScrollingEnabled="true"
                android:paddingBottom="@dimen/home_fragment_padding"
                android:paddingLeft="@dimen/home_fragment_padding"
                android:paddingRight="@dimen/home_fragment_padding">

                <LinearLayout
                    android:id="@+id/left_column"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/right_column"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1.0"
                    android:orientation="vertical">


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>